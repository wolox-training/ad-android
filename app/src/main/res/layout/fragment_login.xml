<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.example.login.LoginFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="@dimen/spacing_none"
        tools:layout_editor_absoluteY="@dimen/spacing_large">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/vLoginBannerImageView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_none"
                android:contentDescription="@string/fragment_login_banner_description"
                android:src="@drawable/login_cover"
                app:layout_constraintDimensionRatio="H, 19:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vLoginGradientView"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_none"
                android:alpha="0.9"
                android:background="@drawable/gradient_fragment_login_banner"
                app:layout_constraintDimensionRatio="H, 19:9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/vLoginWoloxLogoImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fragment_login_buttons_and_edit_text_height"
                android:layout_marginTop="@dimen/fragment_login_wolox_logo_margin_top"
                android:layout_marginEnd="@dimen/fragment_login_buttons_and_edit_text_height"
                android:contentDescription="@string/fragment_login_wolox_logo_description"
                android:src="@drawable/wolox_logo_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/vLoginBannerImageView" />

        </android.support.constraint.ConstraintLayout>

        <EditText
            android:id="@+id/vLoginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:ems="10"
            android:hint="@string/fragment_login_email_hint_edit_text"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vLoginWoloxLogoImageView" />

        <EditText
            android:id="@+id/vLoginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium_more"
            android:layout_marginEnd="@dimen/spacing_large"
            android:ems="10"
            android:hint="@string/fragment_login_password_hint"
            android:inputType="textPassword"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/vLoginEmailEditText" />

        <Button
            android:id="@+id/vLoginLogInButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large_extra"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/fragment_login_login_button"
            app:layout_constraintTop_toBottomOf="@+id/vLoginPasswordEditText" />

        <Button
            android:id="@+id/vLoginSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium_more"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@color/colorWoloxBlue"
            android:text="@string/fragment_login_signup_button"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/vLoginLogInButton" />

        <TextView
            android:id="@+id/vLoginTermsAndConditionsTextView"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/spacing_none"
            android:layout_marginStart="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginBottom="@dimen/spacing_large"
            android:layout_weight="1"
            android:gravity="bottom"
            android:text="@string/fragment_login_by_joining" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>