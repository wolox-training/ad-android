<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.example.login.LoginFragment">

    <ImageView
        android:id="@+id/vLoginBannerImageView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:contentDescription="@string/fragment_login_banner_description"
        android:src="@drawable/login_cover"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="19:9" />

    <View
        android:id="@+id/vLoginGradientView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:alpha="0.9"
        android:background="@drawable/gradient_fragment_login_banner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vLoginBannerImageView"/>

    <ImageView
        android:id="@+id/vLoginWoloxLogoImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/fragment_login_wolox_logo_description"
        android:src="@drawable/wolox_logo_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/vLoginBannerImageView"
        app:layout_constraintTop_toBottomOf="@+id/vLoginBannerImageView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/vLoginWoloxLogoImageView">

        <EditText
            android:id="@+id/vLoginEmailEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large"
            android:layout_marginEnd="@dimen/spacing_large"
            android:ems="10"
            android:hint="@string/fragment_login_email_hint_edit_text"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/vLoginPasswordEditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium_more"
            android:layout_marginEnd="@dimen/spacing_large"
            android:ems="10"
            android:hint="@string/fragment_login_password_hint"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/vLoginLogInButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_large_extra"
            android:layout_marginEnd="@dimen/spacing_large"
            android:text="@string/fragment_login_login_button" />

        <Button
            android:id="@+id/vLoginSignUpButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fragment_login_buttons_and_edit_text_height"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_marginTop="@dimen/spacing_medium_more"
            android:layout_marginEnd="@dimen/spacing_large"
            android:background="@color/colorWoloxBlue"
            android:text="@string/fragment_login_signup_button"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <TextView
        android:id="@+id/vLoginTermsAndConditionsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_large"
        android:layout_marginStart="@dimen/spacing_large"
        android:layout_marginEnd="@dimen/spacing_large"
        android:gravity="center"
        android:text="@string/fragment_login_by_joining"
        app:layout_constraintBottom_toBottomOf="parent" />

</android.support.constraint.ConstraintLayout>
