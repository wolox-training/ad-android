<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_recycle_view_items"
        android:orientation="horizontal"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/vHomeNewsItemImageView"
            android:layout_width="@dimen/home_news_item_image_size"
            android:layout_height="@dimen/home_news_item_image_size"
            android:layout_margin="@dimen/spacing_large"
            android:layout_gravity="start|center_vertical"
            android:contentDescription="@string/fragment_home_news_item_image_description"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vHomeNewsItemTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/static_spacing_large"
                android:textSize="@dimen/text_size_recycle_view_item_title"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/vHomeNewsItemDescription"
                android:layout_width="match_parent"
                android:layout_height="@dimen/static_spacing_large" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/spacing_large"
            android:layout_gravity="end"
            android:orientation="vertical">

            <!-- TODO: The text of this textView will be replaced in the next PR with real time -->
            <TextView
                android:id="@+id/vHomeNewsItemTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_large"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_gravity="top|end" />

            <ImageButton
                android:id="@+id/vHomeNewsItemLikeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_large"
                android:layout_marginTop="@dimen/spacing_medium_more"
                android:layout_gravity="bottom|end"
                android:contentDescription="@string/fragment_home_news_like_button_description"
                android:background="@null"
                android:src="@drawable/ic_like_off" />

        </LinearLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>